<form action="/login" method="post">
  <p>
    <label>
      Email:
      <input type="text" name="email">
    </label>
  </p>

  <p>
    <label>
      Password:
      <input type="password" name="password">
    </label>
  </p>

  {{#if message}}
    <div class="error-message">{{ message }}</div>
  {{/if}}

  <button type="submit">Login</button>
</form>
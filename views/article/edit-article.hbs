<form action="/article/edit-article/{{article._id}}" method="POST" enctype="multipart/form-data">
  <p>
      <label>
        <div class="field">
          <div class="field-name">Title:</div>
          <div class="field-content">
            <input type="text" name="title" value = {{articleFromDatabase.title}}>
          </div>
        </div>
      </label>
    </p>

  <p>
      <label>
        <div class="field">
          <div class="field-name">Featured picture:</div>
          <div class="field-content">
      <input type="file" name="picFeatured" value = {{articleFromDatabase.picFeatured}}>
          </div>
        </div>
      </label>
  </p>

  <p>
      <label>
        <div class="field">
          <div class="field-name">Caption:</div>
          <div class="field-content">
            <textarea name="picCaption">{{articleFromDatabase.picCaption}}</textarea>
          </div>
        </div>
      </label>
  </p>

  <p>
      <label>
        <div class="field">
          <div class="field-name">Author(s):</div>
          <div class="field-content">
            <input type="text" name="author" value = {{articleFromDatabase.author}}>
          </div>
        </div>
      </label>
  </p>

  <p>
      <label>
        <div class="field">
          <div class="field-name">Article:</div>
          <div class="field-content">
            <textarea name="article">{{articleFromDatabase.article}}</textarea>
          </div>
        </div>
      </label>
  </p>

  <p>
      <label>
        <div class="field">
          <div class="field-name">Tags:</div>
          <div class="field-content">
            <textarea name="tags">{{articleFromDatabase.tags}}</textarea>
          </div>
        </div>
      </label>
  </p>

  <button type="submit">Save</button>
</form>